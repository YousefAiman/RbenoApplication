<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layoutDirection="ltr"
    android:gravity="end"
    tools:context=".PasswordActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/passwordToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red"
        app:contentInsetLeft="0dp"
        android:layoutDirection="rtl"
        app:navigationIcon="@drawable/back_arrow_white"
        android:elevation="4dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="تغيير كلمة المرور"
            android:textColor="#fff"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#323232"
        android:alpha="0.64"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="35dp"
        android:text="كلمة المرور القديمة"
        android:fontFamily="@font/a_google" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/currentPasswordEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#323232"
        app:backgroundTint="@color/red"
        android:textSize="18sp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="28dp"
        android:inputType="textPassword"
        android:fontFamily="@font/a_google" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#323232"
        android:alpha="0.64"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="35dp"
        android:text="كلمة المرور الجديدة"
        android:fontFamily="@font/a_google" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/newPasswordEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#323232"
        app:backgroundTint="@color/red"
        android:textSize="18sp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="28dp"
        android:inputType="textPassword"
        android:fontFamily="@font/a_google" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#323232"
        android:alpha="0.64"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="35dp"
        android:text="تأكيد كلمة المرور الجديدة"
        android:fontFamily="@font/a_google" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/confirmPasswordEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#323232"
        app:backgroundTint="@color/red"
        android:textSize="18sp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="28dp"
        android:inputType="textPassword"
        android:fontFamily="@font/a_google" />


    <android.widget.Button
        android:id="@+id/changePasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/signinbuttonlayout"
        android:fontFamily="@font/a_google"
        android:text="تحديث"
        android:textColor="#fff"
        android:textSize="18sp" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-6990486336142688/2040430436" />


</LinearLayout>