                    android:text="قابل للنقاش"
                    android:textColor="#929292"
                    android:visibility="gone"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/phoneCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_back"
                    android:fontFamily="@font/a_google"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text="اخفاء رقم الهاتف"
                    android:textColor="#929292"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/priceEd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.5"
                    android:background="@drawable/promotion_editetext_back"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="12dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="12dp"
                    android:nextFocusDown="@id/descEd"
                    android:paddingBottom="6dp"
                    android:textColor="@color/textGreyColor"
                    android:textColorHint="#929292"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:text="وصف الاعلان" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGreyColor"
                    android:text="1000/"
                    android:fontFamily="@font/a_google"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/descLengthTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGreyColor"
                    android:text="0"
                    android:fontFamily="@font/a_google"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/descEd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/promotion_editetext_back"
                    android:inputType="textMultiLine"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:gravity="start|top"
                    android:hint="قم بكتابة وصف دقيق وواضح عن المنتج"
                    android:lines="5"
                    android:fontFamily="@font/a_google"
                    android:maxLength="1000"
                    android:lineSpacingMultiplier="1.1"
                    android:textColorHint="#929292"
                    android:textColor="@color/textGreyColor"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="12sp" />
            </LinearLayout>

            <android.widget.Button
                android:id="@+id/addPromoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/signinbuttonlayout"
                android:fontFamily="@font/a_google"
                android:layout_marginBottom="40dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="نشر الاعلان"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>