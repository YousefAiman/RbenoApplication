<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="البريد الإلكتروني"
            android:textColor="#BE1522"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/guideline209"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

        <ImageView
            android:id="@+id/twitterImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toStartOf="@+id/guideline206"
            app:layout_constraintStart_toStartOf="@+id/guideline210"
            app:layout_constraintTop_toTopOf="@+id/facebookLogin"
            app:srcCompat="@drawable/twitter_icon" />


        <ImageView
            android:id="@+id/googleImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toStartOf="@+id/guideline228"
            app:layout_constraintStart_toStartOf="@+id/guideline229"
            app:layout_constraintTop_toTopOf="@+id/facebookLogin"
            app:srcCompat="@drawable/google_icon" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleSigninBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/guideline228"
            app:layout_constraintStart_toStartOf="@+id/guideline229"
            app:layout_constraintTop_toTopOf="@+id/facebookLogin" />

        <ImageView
            android:id="@+id/facebookLogin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline226"
            app:layout_constraintStart_toStartOf="@+id/guideline227"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:srcCompat="@drawable/facebook_icon" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebookImage"
            style="@style/FacebookLoginButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/facebook_icon"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/facebookLogin"
            app:layout_constraintEnd_toStartOf="@+id/guideline226"
            app:layout_constraintStart_toStartOf="@+id/facebookLogin"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />


        <TextView
            android:id="@+id/signinTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="لديك حساب مسبق؟ سجل من هنا"
            android:textColor="#373737"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebookLogin" />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="#707070"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintEnd_toStartOf="@+id/guideline227"
            app:layout_constraintStart_toStartOf="@+id/guideline225"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView12"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="#707070"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintEnd_toStartOf="@+id/guideline222"
            app:layout_constraintStart_toStartOf="@+id/guideline226"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="أو"
            android:textColor="#5E5E5E"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/guideline227"
            app:layout_constraintTop_toBottomOf="@+id/registerTv2" />

        <android.widget.Button
            android:id="@+id/registerTv2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/signinbuttonlayout"
            android:fontFamily="@font/a_google"
            android:text="إنشاء الحساب"
            android:layout_marginTop="22dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@+id/guideline208"
            app:layout_constraintStart_toStartOf="@+id/guideline210"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline208"
            app:layout_constraintStart_toStartOf="@+id/guideline210"
            app:hintEnabled="false"
            app:passwordToggleDrawable="@drawable/ic_perm_identity_black_24dp"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="3dp"
            app:boxBackgroundMode="none"
            app:passwordToggleTint="#C23D3D3D"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <android.widget.EditText
                android:id="@+id/usernameRegisterEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signinedittext"
                android:gravity="right|center_vertical"
                android:inputType="textAutoComplete"
                android:paddingStart="10dp"
                android:paddingEnd="12dp"
                android:textSize="@dimen/_10sdp"
                 />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline208"
            app:layout_constraintStart_toStartOf="@+id/guideline210"
            app:passwordToggleDrawable="@drawable/ic_email_black_24dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            android:layout_marginTop="3dp"
            app:boxBackgroundMode="none"
            app:passwordToggleTint="#C23D3D3D"
            app:layout_constraintTop_toBottomOf="@+id/textView15">

            <android.widget.EditText
                android:id="@+id/emailRegisterEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signinedittext"
                android:gravity="right|center_vertical"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="12dp"
                android:textSize="@dimen/_10sdp"
                 />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:hintEnabled="false"
            android:layout_marginTop="3dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#C23D3D3D"
            app:boxBackgroundMode="none"
            app:layout_constraintEnd_toStartOf="@+id/guideline208"
            app:layout_constraintStart_toStartOf="@+id/guideline210"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            >

            <android.widget.EditText
                android:id="@+id/passwordRegisterEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signinedittext"
                android:gravity="right|center_vertical"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="@dimen/_10sdp"
                 />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline208"
            app:layout_constraintStart_toStartOf="@+id/guideline210"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:passwordToggleEnabled="true"
            app:boxBackgroundMode="none"
            android:layout_marginTop="3dp"
            app:hintEnabled="false"
            app:passwordToggleTint="#C23D3D3D">

            <android.widget.EditText
                android:id="@+id/passwordRegisterEd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:background="@drawable/signinedittext"
                android:gravity="right|center_vertical"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="@dimen/_10sdp"
                 />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:layout_marginTop="5dp"
            android:text="@string/password"
            android:textColor="#BE1522"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/guideline209"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:layout_marginTop="5dp"
            android:text="@string/confirmPassword"
            android:textColor="#BE1522"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/guideline209"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="اسم المستخدم"
            android:layout_marginTop="12dp"
            android:textColor="#BE1522"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/guideline209"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="@string/createAccountTitle"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/guideline204"
            app:layout_constraintStart_toStartOf="@+id/guideline206"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rbeno_logo_png" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline204"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline206"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline208"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.88" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline209"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.825" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline210"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline225"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline226"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.575" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline227"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.425" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline228"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.88" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline229"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.73" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>