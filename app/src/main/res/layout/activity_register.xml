<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="#fff"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:srcCompat="@drawable/rbeno_logo_png" />

        <android.widget.Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/signinbuttonlayout"
            android:fontFamily="@font/a_google"
            android:text="إنشاء الحساب"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout9" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            android:background="@drawable/signinedittext"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <android.widget.EditText
                android:id="@+id/usernameRegisterEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:layout_marginEnd="30dp"
            android:text="اسم المستخدم"
            android:padding="2dp"
            android:textColor="#BE1522"
            android:background="#fff"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout5"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout5"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout5" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            android:background="@drawable/signinedittext"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">

            <android.widget.EditText
                android:id="@+id/emailRegisterEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:layout_marginEnd="30dp"
            android:text="البريد الإلكتروني"
            android:padding="2dp"
            android:textColor="#BE1522"
            android:background="#fff"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout8"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout8"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout8" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            android:layout_marginTop="30dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#C23D3D3D">

            <android.widget.EditText
                android:id="@+id/passwordRegisterEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signinedittext"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="@string/password"
            android:layout_marginEnd="30dp"
            android:background="#fff"
            android:textColor="#BE1522"
            android:padding="2dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout6"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout6" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            android:layout_marginTop="30dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#C23D3D3D">

            <android.widget.EditText
                android:id="@+id/passwordRegisterEd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signinedittext"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:text="@string/confirmPassword"
            android:layout_marginEnd="30dp"
            android:background="#fff"
            android:textColor="#BE1522"
            android:padding="2dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout9"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout9"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout9" />


        <LinearLayout
            android:id="@+id/socialLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/registerBtn"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/facebookImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/facebook_icon"
                android:layout_marginEnd="30dp" />

            <ImageView
                android:id="@+id/twitterImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/twitter_icon" />

            <ImageView
                android:id="@+id/googleImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/google_icon" />


            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebookBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="gone" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleSigninBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/google_icon"
                android:visibility="gone" />

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/twitterLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/registerLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/socialLinear">


            <TextView
                android:id="@+id/registerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:text=" سجل من هنا"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/registerTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:text="لديك حساب مسبق؟"
                android:textColor="@color/pcBlack"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>