<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="18dp"
    android:layoutDirection="ltr"
    android:paddingEnd="18dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/closePromoIv"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/close_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:fontFamily="@font/a_google"
            android:text="اضافة اعلان"
            android:textColor="#3D3D3D"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/promotionNotesTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E63D3D3D"
        android:fontFamily="@font/a_google"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/imagePromoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:textAlignment="viewEnd"
                android:text="اعلان بصور"
                android:background="@drawable/sheet_btn_back"
                android:textColor="#fff"
                android:textSize="16sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/imageCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="15dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/textPromoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:background="@drawable/sheet_btn_back"
                android:text="اعلان نصي"
                android:textAlignment="viewEnd"
                android:textColor="#fff"
                android:textSize="16sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/textCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="15dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/videoPromoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:textAlignment="viewEnd"
                android:visibility="visible"
                android:background="@drawable/sheet_btn_back"
                android:text="اعلان بفيديو"
                android:textColor="#fff"
                android:textSize="16sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/videoCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_google"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="15dp" />

    </FrameLayout>

</LinearLayout>