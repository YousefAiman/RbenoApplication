<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fontFamily="@font/a_google"
        android:text="اختر نوع الاعلان الذي تريد إضافته"
        android:textColor="@color/textGreyColor"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/textPromoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="اعلان نصي"
        android:textColor="@color/red"
        android:textSize="@dimen/_13sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textGreyColor" />

    <TextView
        android:id="@+id/imagePromoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="اعلان بصور"
        android:textColor="@color/red"
        android:textSize="@dimen/_13sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textGreyColor" />

    <TextView
        android:id="@+id/videoPromoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="اعلان بفيديو"
        android:textColor="@color/red"
        android:textSize="@dimen/_13sdp" />

</LinearLayout>