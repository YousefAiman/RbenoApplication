<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".NewestPromosFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:descendantFocusability="blocksDescendants"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollview">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newestPromosRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:paddingBottom="200dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView28" />

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView31">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/firstCardview"
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp">

<!--                            <ImageView-->
<!--                                android:id="@+id/promoimage1"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:scaleType="centerCrop"-->
<!--                                android:src="@drawable/house_blue_new" />-->

                            <TextView
                                android:id="@+id/categoryTv1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:fontFamily="@font/a_google"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_15sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/secondCardview"
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/firstCardview"
                            app:cardCornerRadius="@dimen/_5sdp">

<!--                            <ImageView-->
<!--                                android:id="@+id/promoimage2"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:layout_alignParentTop="true"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:layout_marginTop="0dp"-->
<!--                                android:layout_toEndOf="@+id/firstCardview"-->
<!--                                android:scaleType="centerCrop"-->
<!--                                android:src="@drawable/phone_purble_new" />-->

                            <TextView
                                android:id="@+id/categoryTv2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:fontFamily="@font/a_google"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_15sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/thirdCardview"
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/secondCardview"
                            app:cardCornerRadius="@dimen/_5sdp">

<!--                            <ImageView-->
<!--                                android:id="@+id/promoimage3"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:layout_alignParentTop="true"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:layout_marginTop="0dp"-->
<!--                                android:scaleType="centerCrop"-->
<!--                                android:src="@drawable/bike_green_new" />-->

                            <TextView
                                android:id="@+id/categoryTv3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:fontFamily="@font/a_google"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_15sdp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/thirdCardview"
                            app:cardCornerRadius="@dimen/_5sdp">

<!--                            <ImageView-->
<!--                                android:id="@+id/promoimage4"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:layout_toEndOf="@+id/thirdCardview"-->
<!--                                android:scaleType="centerCrop"-->
<!--                                android:src="@drawable/pc_blue_new" />-->

                            <TextView
                                android:id="@+id/categoryTv4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:fontFamily="@font/a_google"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_15sdp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </HorizontalScrollView>
                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:background="@color/red"
                    app:layout_constraintBottom_toBottomOf="@+id/textView31"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@+id/textView31" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/a_google"
                    android:text="الأكثر بحثا"
                    android:layout_marginEnd="20dp"
                    android:textColor="#515C6F"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/VideosDotsSlider" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/a_google"
                    android:text="المضاف حديثا"
                    android:textColor="#515C6F"
                    android:layout_marginEnd="20dp"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll" />

                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:background="@color/red"
                    app:layout_constraintBottom_toBottomOf="@+id/textView28"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@+id/textView28" />
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/videoViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/VideosDotsSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/videoViewPager" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>