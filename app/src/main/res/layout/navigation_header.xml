<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#FFFFFF">    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/profile_image"        android:layout_width="@dimen/_80sdp"        android:layout_height="@dimen/_80sdp"        android:layout_marginTop="@dimen/_14sdp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/username"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/_6sdp"        android:fontFamily="@font/a_google"        android:textColor="#515C6F"        android:textSize="@dimen/_17sdp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/profile_image" />    <TextView        android:id="@+id/staticusername"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="@dimen/_10sdp"        android:textColor="@color/textGreyColor"        android:fontFamily="@font/a_google"        android:textSize="@dimen/_12sdp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/username"        />    <ImageView        android:id="@+id/statusImageView"        android:layout_width="@dimen/_10sdp"        android:layout_height="@dimen/_10sdp"        android:layout_margin="@dimen/_6sdp"        app:layout_constraintEnd_toEndOf="@+id/profile_image"        app:layout_constraintTop_toTopOf="@+id/profile_image"        app:srcCompat="@drawable/green_circle" /></androidx.constraintlayout.widget.ConstraintLayout>