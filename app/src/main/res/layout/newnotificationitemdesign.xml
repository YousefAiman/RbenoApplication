<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="40dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="17dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/transparentGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/notificationStatusImage"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@+id/notificationImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_circle" />


    <TextView
        android:id="@+id/notificationNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/a_google"
        android:text="fasdf asdfas"
        android:textColor="@color/textGreyColor"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/notificationImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:text="بخصوص اعلان رقم"
        android:textColor="#9FA6B0"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@+id/notificationDescTv"
        app:layout_constraintEnd_toEndOf="@+id/notificationNameTv"
        app:layout_constraintTop_toBottomOf="@+id/notificationNameTv" />

    <TextView
        android:id="@+id/notificationPromoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/a_google"
        android:text="#54"
        android:textColor="#BE1824"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textView66"
        app:layout_constraintEnd_toStartOf="@+id/textView66"
        app:layout_constraintTop_toTopOf="@+id/textView66" />

    <TextView
        android:id="@+id/notificationTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:text="asdfa sdf asdf"
        android:textColor="#515C6F"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationPromoTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notificationPromoTv" />

    <TextView
        android:id="@+id/notificationDescTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:text="laksd flaskd flskaasdfk asdlf asdlfk sldkfs"
        android:textColor="#515C6F"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationImage"
        app:layout_constraintEnd_toEndOf="@+id/textView66" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>