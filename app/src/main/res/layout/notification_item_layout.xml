<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/user_icon"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notificationNameTv"
        app:layout_constraintWidth_percent="0.13" />

    <ImageView
        android:id="@+id/notificationStatusImage"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="@+id/notificationImage"
        app:layout_constraintTop_toTopOf="@+id/notificationImage" />

    <TextView
        android:id="@+id/notificationNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/a_google"
        android:textColor="#3D3D3D"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/notificationImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/a_google"
        android:layout_marginEnd="2dp"
        android:text="بخصوص اعلان رقم"
        android:textColor="#9FA6B0"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/notificationNameTv"
        app:layout_constraintTop_toBottomOf="@+id/notificationNameTv" />


    <TextView
        android:id="@+id/notificationPromoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:layout_marginEnd="6dp"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/notificationTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:gravity="center"
        android:layout_marginStart="14dp"
        android:textColor="#BDBDBD"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/notificationDescTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_google"
        android:textColor="#3D3D3D"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationImage"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.2"
        android:background="#707070"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/notificationImage" />

</androidx.constraintlayout.widget.ConstraintLayout>