<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00DA0000"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_25sdp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/promo_icon_round_red"
                app:layout_constraintBottom_toBottomOf="@+id/imageView45"
                app:layout_constraintEnd_toEndOf="@+id/imageView45"
                app:layout_constraintStart_toStartOf="@+id/guideline284"
                app:layout_constraintTop_toTopOf="@+id/imageView45" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView45"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/telephone_white_icon"
                app:layout_constraintBottom_toTopOf="@+id/guideline287"
                app:layout_constraintEnd_toStartOf="@+id/guideline283"
                app:layout_constraintStart_toStartOf="@+id/guideline284"
                app:layout_constraintTop_toTopOf="@+id/guideline288" />

            <TextView
                android:id="@+id/phoneNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:text="245648955"
                android:textColor="@color/red"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline287" />


            <ImageView
                android:id="@+id/copyImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_content_copy_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/phoneNumTv"
                app:layout_constraintEnd_toStartOf="@+id/guideline285"
                app:layout_constraintStart_toStartOf="@+id/guideline290"
                app:layout_constraintTop_toTopOf="@+id/phoneNumTv" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline287"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.58" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline288"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.19" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline283"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.61" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline285"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.81" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline290"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.71" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline284"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.39" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
