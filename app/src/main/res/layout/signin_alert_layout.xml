<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_220sdp"
    android:layoutDirection="ltr"
    android:layout_height="@dimen/_150sdp"
    android:layout_gravity="center"
    android:background="#00DA0000"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_20sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline288"
                app:layout_constraintWidth_percent="0.228"
                app:srcCompat="@drawable/explanation_mark_icon" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/a_google"
                android:gravity="center"
                android:text="لم يتم تسجيل الدخول بعد"
                android:textColor="#3D3D3D"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/guideline287" />

            <TextView
                android:id="@+id/alert_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:padding="5dp"
                android:text="الدخول"
                android:textColor="#3D3D3D"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/textView45"
                app:layout_constraintTop_toTopOf="@+id/guideline286" />

            <TextView
                android:id="@+id/alert_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_google"
                android:padding="5dp"
                android:text="مستخدم جديد"
                android:textColor="@color/red"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/textView45"
                app:layout_constraintTop_toTopOf="@+id/guideline286" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline286"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.61" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline287"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline288"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
