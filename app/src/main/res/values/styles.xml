<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorHint">#000000</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/a_google</item>
        <item name="android:itemBackground">#fff</item>
        <item name="android:background">@drawable/signinedittext</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="CircularProgressWhite" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CircularProgressGrey" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/textGreyColor</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:editTextColor">@color/textGreyColor</item>
        <item name="android:textColorHint">@color/textGreyColor</item>
        <item name="android:fontFamily">@font/a_google</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#ff0000</item>
    </style>

    <style
        name="Theme.MaterialComponents.BottomNavigationView"
        parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/a_google</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FullScreenDialogTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Theme.AppCompat.Dialog</item>
    </style>

    <!--    <style name="SpinnerTheme" parent="android:Widget.Spinner">-->
    <!--        <item name="android:background">@drawable/spinner_custom_layout</item>-->
    <!--    </style>-->

</resources>
